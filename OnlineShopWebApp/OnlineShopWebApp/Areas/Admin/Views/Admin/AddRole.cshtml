@model Role

<form method="post" asp-action="AddRole" asp-controller="Admin">
<div class="container-sm col-md-6 d-flex flex-column align-items-center">
        <h3 class="mb-2 text-center">Add new Role</h3>

        <div class="validation text-danger" asp-validation-summary="All"></div>

        <div class="form-group mb-2">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="mb-2">
            <button type="submit" class="btn btn-primary mt-3">AddRole</button>
        </div>
</div>
</form>
