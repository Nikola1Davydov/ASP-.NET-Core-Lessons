@model Cart

@{
    ViewData["Title"] = "Order Delivery Page";
}

@if (Model is null)
{
    <div class="d-flex justify-content-center text-center align-items-center" style="min-height: 50vh;">
        <div>
            <h3>@ViewData["Title"]</h3>
            <a href="/home/index/">Wollen Sie etwas noch kaufen?</a>
            <br /><br />
            <h5>Danke für ihr Einkauf!</h5>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <h3>Review Your Products and Enter Delivery Information</h3>
            <!-- Products List -->
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Cost Euro</th>
                            <th scope="col">Anzahl</th>
                            <th scope="col">Total Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <th>@item.Product.Name</th>
                                <th>@item.Product.Cost Euro</th>
                                <th>@item.Amount</th>
                                <th>@item.Cost</th>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-lg-end">
                    <h3>Summury</h3>
                    <h3>@Model.Cost</h3>
                </div>
            </div>
        </div>

        <!-- Contact Form for Delivery -->
        <h3>Delivery Information</h3>
        <div class="form-group">
            <label for="FullName">Full Name</label>
            <input type="text" class="form-control" id="FullName" name="FullName" placeholder="Enter your full name" required>
            <div class="invalid-feedback">
                Please enter your full name.
            </div>
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter your email address" required>
            <div class="invalid-feedback">
                Please enter a valid email address.
            </div>
        </div>

        <div class="form-group">
            <label for="Phone">Phone Number</label>
            <input type="tel" class="form-control" id="Phone" name="Phone" placeholder="Enter your phone number" required>
            <div class="invalid-feedback">
                Please enter your phone number.
            </div>
        </div>

        <div class="form-group">
            <label for="City" class="form-label">City</label>
            <input type="text" class="form-control" id="City" required>
            <div class="invalid-feedback">
                Please enter your phone city.
            </div>
        </div>

        <div class="form-group">
        <label for="DeliveryAddress">Delivery Address</label>
            <input type="text" class="form-control" id="DeliveryAddress" required>
            <div class="invalid-feedback">
                Please provide a delivery address.
            </div>
        </div>
        <a class="btn btn-primary mt-3" href="/OrderDelivery/SubmitOrder" role="button">Submit Order</a>
    </div>

}
