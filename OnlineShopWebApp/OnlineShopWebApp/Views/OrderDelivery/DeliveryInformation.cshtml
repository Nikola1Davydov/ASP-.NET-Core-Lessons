@model UserDeliveryInfo

<form method="post">
    <h3>Delivery Information</h3>

    <div class="validation text-danger" asp-validation-summary="All"></div>

    <div class="form-group mb-2">
        <label asp-for="FullName">Name</label>
        <input class="form-control" type="text" asp-for="FullName" placeholder="Enter your full name" required />
        <span asp-validation-for="FullName"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Email">Email</label>
        <input class="form-control" type="email" asp-for="Email" placeholder="Enter your email address" required />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Phone">Phone Number</label>
        <input class="form-control" type="number" asp-for="Phone" placeholder="Enter your phone number" required />
        <span asp-validation-for="Phone"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="City">City</label>
        <input class="form-control" type="text" asp-for="City" placeholder="Enter your city" required />
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="DeliveryAddress">Delivery Address</label>
        <input class="form-control" type="text" asp-for="DeliveryAddress" placeholder="Please provide a delivery address" required />
        <span asp-validation-for="DeliveryAddress"></span>
    </div>

    <button class="btn btn-primary mt-3" asp-controller="OrderDelivery" asp-action="SubmitOrder">SubmitOrder</button>
</form>