@model List<Order>
@{
    ViewData["Title"] = "Orders list";
}
<div class="container">
    <!-- Заголовок -->
    <div class="row">
        <div class="col-md-12 text-center">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row">
        @await Html.PartialAsync("AdminLeftPanel")
        <div class="col-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Сумма</th>
                        <th>Статус</th>
                        <th>Пользователь(логин)</th>
                        <th>Дата</th>
                        <th>Время</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Nummer</td>
                            <td>@order.Cost</td>
                            <td>@EnumHelper.GetDisplayName(order.Status)</td>
                            <td>@order.UserDeliveryInfo.Email</td>
                            <td>@order.DateCreated.ToShortDateString()</td>
                            <td>@order.DateCreated.ToShortTimeString()</td>
                            <td>
                                <a href="/Admin/ShowOrderDetails?orderId=@order.Id" class="btn btn-link">Редактировать</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>