@model Product

<div class="container-sm col-md-6 d-flex flex-column align-items-center">
    <form method="post" asp-action="AddProduct" asp-controller="Admin">
        <h3 class="mb-2 text-center">Add new Product</h3>

        <div class="validation text-danger" asp-validation-summary="All"></div>

        <div class="form-group mb-2">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Cost">Cost</label>
            <input type="number" asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="mb-2">
            <button type="submit" class="btn btn-primary mt-3">AddProduct</button>
        </div>
    </form>
</div>
