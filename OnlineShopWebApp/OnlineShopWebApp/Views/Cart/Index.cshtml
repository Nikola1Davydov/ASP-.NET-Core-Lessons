@model Cart

@{
    ViewData["Title"] = "Cart";
}

@if (Model is null)
{
    <div class="d-flex justify-content-center text-center align-items-center" style="min-height: 50vh;">
        <div>
            <h3>@ViewData["Title"]</h3>
            <a href="/home/index/">Continue shopping</a>
            <br /><br />
            <h5>Your cart is currently empty.</h5>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cost Euro</th>
                        <th>Anzahl</th>
                        <th>Total Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <th>@item.Product.Name</th>
                            <th>@item.Product.Cost Euro</th>
                            <th>@item.Amount</th>
                            <th>@item.Cost</th>
                            <th><a class="btn btn-light" href="/cart/IncreaseProductInCart?productId=@item.Product.Id" role="button">+</a></th>
                            <th><a class="btn btn-light" href="/cart/RemoveFromCart?productId=@item.Product.Id" role="button">-</a></th>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-lg-end">
                <h3>Summury</h3>
                <h3>@Model.Cost</h3>
            </div>
            <div class="text-center">
                <a class="btn btn-primary" href="home/index" role="button">Weiter einkaufen</a>
                <a class="btn btn-success" href="/OrderDelivery/Index?userId=@Model.UserId" role="button">zur Kasse gehen</a>
                <a class="btn btn-danger" href="/cart/CleanCart" role="button">Alles in Kasse löschen</a>
            </div>
        </div>
    </div>

}
