@model Registration

<div class="container-sm col-md-6 d-flex flex-column align-items-center">
    <form method="post">
        <h3 class="mb-2 text-center">Einloggen</h3>

        <div class="validation text-danger" asp-validation-summary="All"></div>

        <div class="form-group mb-2">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" />
            <span asp-validation-for="Login"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="PasswordRepeat">Password confirm</label>
            <input type="password" asp-for="PasswordRepeat" class="form-control" />
            <span asp-validation-for="PasswordRepeat"></span>
        </div>

        <div class="mb-2">
            <button type="submit" class="btn btn-primary mt-3" asp-controller="Authentication" asp-action="Registration">Registration</button>
        </div>
    </form>
</div>